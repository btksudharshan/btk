pipeline {
    agent any 
    environment {
    DOCKERHUB_CREDENTIALS = credentials('btk-dockerhub')
    }
    stages {
        stage('SCM checkout') {
            steps{
            git 'https://github.com/btksudharshan/btk.git'
            }
        }
        stage('Build docker image') {
            steps{
                sh 'docker build -t btksudharshan/btk:$BUILD_NUMBER .'
            }
        }
        stage('login to dockerhub') {
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        stage('push image') {
            steps{
                sh 'docker push btksudharshan/btk:$BUILD_NUMBER'
            }
        }
}
post {
        always {
            sh 'docker logout'
        }
    }
}
